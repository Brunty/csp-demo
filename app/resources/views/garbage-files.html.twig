{% extends 'layout.html.twig' %}

{% block title %}
    Garbage Files - {{ parent() }}
{% endblock %}

{% block content %}

    {#
        Generally displaying content using `raw` isn't a good idea, you should escape stuff (which twig does by default)
        Here, I'm using `raw` so I can show the dangers of having unescaped content on your sites / apps.
    #}
    <h1>{{ secure_message|raw }}</h1>

    <div id="notepad">
        {{ note_content|raw }}
    </div>

    <form action="/garbage-files" method="post" id="noteform">
        <textarea name="note" id="note-field" cols="30" rows="15" placeholder="Notepad..."></textarea>
        <button>Update note</button>
    </form>

    <img src="assets/images/4.jpg" alt=""/>
{% endblock %}
